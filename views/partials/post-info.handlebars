<div class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>
            <a href="/posts/{{id}}">
                <div class="col-8">{{post.title}}</div>
            </a>
        </h2>
        <div class="col-3">by {{user.username}} on {{post.created_at}}</div>
    </div>
    <p class="card-body">{{post.content}}</p>
</div>